<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Separator?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.caesarx.CaesarCipherController">
    <children>
    <ComboBox fx:id="languageSelector"/>

        <Label text="Введите текст для шифрования/расшифровки:"/>
        <TextArea fx:id="inputText" />

        <Label text="Введите ключ шифрования:"/>
        <TextField fx:id="shiftKey" />

        <HBox spacing="10">
            <Button text="Зашифровать" onAction="#encryptText"/>
            <Button text="Расшифровать" onAction="#decryptText"/>
        </HBox>

        <Separator/>

        <!-- Поля для файловой обработки -->
        <Label text="Введите путь к входному файлу:"/>
        <TextField fx:id="inputFilePath"/>

        <Label text="Введите путь к выходному файлу:"/>
        <TextField fx:id="outputFilePath"/>

        <HBox spacing="10">
            <Button text="Зашифровать файл" onAction="#encryptFile"/>
            <Button text="Расшифровать файл" onAction="#decryptFile"/>
        </HBox>

        <Label text="Результат:"/>
        <TextArea fx:id="resultText" editable="false"/>
    </children>
</VBox>

